<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="MMJTest" verbose="5" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="pageObject.utility.TestExecutionListener"/>
    </listeners>
    <test name="ChromeTesting">
        <parameter name="config" value="single.conf.json"/>
        <parameter name="browserName" value="chrome"/>
        <groups>
            <run>
                <exclude name="clients"  />
                <exclude name="orders"  />
                <exclude name="geolocation"  />
                <exclude name="makingOrder"  />
                <exclude name="particularSingUp"  />
                <exclude name="productAndCart"  />
                <include name="emails"  />
            </run>
        </groups>

        <classes>
            <class name="pageobject.desktoptest.GeolocationForNotLoginUserTestSuit" />
            <class name="pageobject.desktoptest.ParticularSignUpTestSuit"/>
            <class name="pageobject.desktoptest.MakingOrderTestSuit"/>
            <class name="pageobject.desktoptest.ProductAndCartTestSuit"/>
            <class name="pageobject.adminpanel.OrdersPageTestSuit"/>
            <class name="pageobject.adminpanel.ClientPageTestSuit"/>
            <class name="pageobject.emailtest.EmailsTestSuit" />
        </classes>
    </test>
    <test name="FirefoxTesting">
        <parameter name="config" value="single.conf.json"/>
        <parameter name="browserName" value="firefox"/>
        <groups>
            <run>
                <exclude name="clients"  />
                <exclude name="orders"  />
                <exclude name="geolocation"  />
                <exclude name="makingOrder"  />
                <exclude name="particularSingUp"  />
                <exclude name="productAndCart"  />
                <exclude name="emails"  />
            </run>
        </groups>

        <classes>
            <class name="pageobject.desktoptest.GeolocationForNotLoginUserTestSuit" />
            <class name="pageobject.desktoptest.ParticularSignUpTestSuit"/>
            <class name="pageobject.desktoptest.MakingOrderTestSuit"/>
            <class name="pageobject.desktoptest.ProductAndCartTestSuit"/>
            <class name="pageobject.adminpanel.OrdersPageTestSuit"/>
            <class name="pageobject.adminpanel.ClientPageTestSuit"/>
            <class name="pageobject.emailtest.EmailsTestSuit" />
        </classes>
    </test>
    <test name="SafariTesting">
        <parameter name="config" value="single.conf.json"/>
        <parameter name="browserName" value="safari"/>
        <groups>
            <run>
                <exclude name="clients"  />
                <exclude name="orders"  />
                <exclude name="geolocation"  />
                <exclude name="makingOrder"  />
                <exclude name="particularSingUp"  />
                <exclude name="productAndCart"  />
                <exclude name="emails"  />
            </run>
        </groups>

        <classes>
            <class name="pageobject.desktoptest.GeolocationForNotLoginUserTestSuit" />
            <class name="pageobject.desktoptest.ParticularSignUpTestSuit"/>
            <class name="pageobject.desktoptest.MakingOrderTestSuit"/>
            <class name="pageobject.desktoptest.ProductAndCartTestSuit"/>
            <class name="pageobject.adminpanel.OrdersPageTestSuit"/>
            <class name="pageobject.adminpanel.ClientPageTestSuit"/>
            <class name="pageobject.emailtest.EmailsTestSuit" />
        </classes>
    </test>
</suite>